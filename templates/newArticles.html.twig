{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}


{% block body %}
<div class="container form">
	<div class="row">
		<div class="col-xs-12">
			<h1>Ajoutez un article </h1>
			{{ form_start(form)}}
				{{ form_errors(form)}}

				{{ form_row(form.title)}}

				{{ form_row(form.content)}}

				{{ form_row(form.create, {'label' : 'Envoyer'})}}

			{{ form_end(form)}}
		</div>
	</div>
</div>

{% endblock %}