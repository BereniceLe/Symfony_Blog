{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}


{% block body %}
<div class="formulaire">
	<h1 class="form_title">Create a new article</h1>
	{{ form_start(form)}}
	{{ form_errors(form)}}

	{{ form_row(form.title)}}

	{{ form_row(form.author)}}

	{{ form_row(form.content)}}

	{{ form_row(form.create, {'label' : 'Send'})}}

	{{ form_end(form)}}
</div>

{% endblock %}