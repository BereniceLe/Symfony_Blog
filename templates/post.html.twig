{# src/templates/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
{% for article in articles %}
  <div class="w3-card-4 w3-margin w3-white">
    <img src="" alt=" {{ article.genre }}" style="width:100%">
    <div class="w3-container">
      <h3><b>{{ article.title }}</b></h3>
      <h5>{{ article.description }} <span class="w3-opacity">{{ article.date }}</span></h5>
    </div>

    <div class="w3-container">
      <p>{{ article.body }}</p>
      <div class="w3-row">
        <div class="w3-col m8 s12">
          <p><button class="w3-button w3-padding-large w3-white w3-border"><b>LIRE PLUS >> </b></button></p>
        </div>
        <div class="w3-col m4 w3-hide-small">
          <p><span class="w3-padding-large w3-right"><b>Commentaires </b> <span class="w3-tag">0</span></span></p>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
{% endblock %}
