{# src/templates/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
  <h2>Blog Lorem Ipsum Articles</h2>
  {% for article in articles %}
  <div class="w3-card-4 w3-margin w3-white">
    <div class="w3-container">
      <h3><b>{{ article.title }}</b></h3>
      <h5>Description simple <span class="w3-opacity">{{ article.published }}</span></h5>
    </div>

    <div class="w3-container">
      <p>{{ article.content | u.truncate(800, '...')}}</p>
      <div class="w3-row">
        <div class="w3-col m8 s12">
          <p><a href="/post/{{article.url}}" class="w3-button w3-padding-large w3-white w3-border"><b>LIRE PLUS</b> >></a></p>
        </div>
        <div class="w3-col m4 w3-hide-small">
          <p><span class="w3-padding-large w3-right"><b>Commentaires </b> <span class="w3-tag">0</span></span></p>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
{% endblock %}
